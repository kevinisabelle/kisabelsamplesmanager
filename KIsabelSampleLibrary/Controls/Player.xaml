<UserControl x:Class="KIsabelSampleLibrary.Controls.Player"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         mc:Ignorable="d" 
         d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Name="BtnPlay" Click="Button_Click_1" Grid.Column="0">Play</Button>
        <Button Name="BtnStop" Grid.Column="1">Stop</Button>
        <TextBlock Name="TxtGenres" Grid.Column="3">
            genre
        </TextBlock>
        <TextBlock Name="TxtTags" Grid.Column="4">
            tags
        </TextBlock>
        <Image Name="ImgSoundImage" Grid.Row="2" Grid.ColumnSpan="5"></Image>
        <Label Name="LblDuration" Grid.Row="0" Grid.Column="2">ms</Label>
        <Label Name="LblFilename" Grid.Row="1" Grid.ColumnSpan="5">File gsodifj osdfig sodfigj sodfigj sofigj sodfijg oij name</Label>
         </Grid>
</UserControl>
