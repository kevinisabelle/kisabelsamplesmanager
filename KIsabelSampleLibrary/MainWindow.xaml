<Window x:Class="KIsabelSampleLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIsabelSampleLibrary"
        mc:Ignorable="d"
        Title="K Isabel - Samples Db" 
        Height="450" Width="800" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Test</TextBlock>
        <GroupBox Grid.Column="1" Header="Search">
            <StackPanel Orientation="Horizontal">
            <Label>Query</Label>
            <TextBox Width="300"></TextBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
