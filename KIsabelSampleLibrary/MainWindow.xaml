<Window xmlns:Controls="clr-namespace:KIsabelSampleLibrary.Controls"  x:Class="KIsabelSampleLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIsabelSampleLibrary"
        mc:Ignorable="d"
        Title="K Isabel - Samples Db" 
        Height="450" Width="800" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="20" Grid.Row="0">K Isabel 
            <LineBreak></LineBreak> Samples Manager</TextBlock>
        <GroupBox Grid.Row="1" Header="Libraries">
            <TreeView>
                <TreeViewItem Header="test">
                    <TreeViewItem Header="test2"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Search">
            <StackPanel Orientation="Horizontal">
            <Label>Query</Label>
            <TextBox Width="300"></TextBox>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Samples" Grid.Column="1" Grid.Row="1">
            <ListView >
                <ListView.View>
                    <GridView AllowsColumnReorder="True"></GridView>
                </ListView.View>
                <ListViewItem Content="test"></ListViewItem>
            </ListView>
        </GroupBox>
       
        <Controls:Player Grid.Column="1" Grid.Row="2" 
                         Sample="null"
                         />
    </Grid>
</Window>
